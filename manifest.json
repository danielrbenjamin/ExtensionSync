{
  "manifest_version": 3,
  "name": "ExtensionSync",
  "version": "0.1",
  "description": "Sync and manage Chrome extensions via a GitHub Gist.",
  "author": "Daniel Benjamin",
  "permissions": [
    "management",
    "storage",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }     
}